  function play() {//Link Audio Bisa Diganti
  var audio = new Audio('https://open.spotify.com/track/4hqJ4bSlYJOXb6Z4SRmzxs?si=f213b3dfc01541a3');audio.play();audio.loop=true;audio.addEventListener('ended', function() {this.currentTime = 0;this.play();}, false);}         

  //Pesan WhatsApp
   function bukaWa(){window.location = "https://api.whatsapp.com/send?phone=6285157944179&text=" + window.nama + " udah liat semuanya. Jadi kapan nih kita berangkat?" + "%0A%0A" + "Btw makasih udah ngucapin ><";} 
  </script>

  <script type="text/javascript">            
              var today = new Date();var date = today.getDate()+'/'+(today.getMonth()+1)+'/'+today.getFullYear()+'.';var dateTime = date;
              const swals = Swal.mixin({
                  backdrop: 'rgba(0,0,123,0.4)', confirmButtonColor: '#003EFF', cancelButtonColor: '#FF0040', allowOutsideClick: false,
              });
              async function mulai(){          	
                  var { value: nama } = await swals.fire({
                      title: 'Hallooo mas ihsan, masukin passwordnya dulu yaa?',
                      input: 'text',
                      confirmButtonText: 'Lanjut',
                      showCancelButton: false,
                  });                           
                  if(nama && nama.length < 11){
                    play();
                    window.nama = nama;
                      await swals.fire('Hai bayiikk, gimana perasaannya udah turn 20?');                    
                      await swals.fire('Eh uda ga bayik lagi deh &#128514;');
                      await swals.fire('Pasti ga gampang buat sampe di titik ini, banyak sedihnya, banyak ovt, banyak sakitnya tapi ga bole ketinggalan happynya ya. Im so proud of u bisa bertahan sampe sejauh ini');
                      await swals.fire('Selamat ulang tahun, semoga lebih baik kedepannya <3');
                      pilihwarna();
                  //                                   
                  } else {
                      await swals.fire('Ups!', 'Salah mas passwordnya');
                      mulai();
                  }
              }            
              mulai();
  </script>
